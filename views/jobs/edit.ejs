<!DOCTYPE html>
<html>
<body>
    <div class="max-w-2xl mx-auto">
        <h2 class="text-2xl font-bold mb-6">Edit Job</h2>
        <form action="/jobs/<%= job._id %>?_method=PUT" method="POST" class="space-y-4">
            <div>
                <label class="block text-gray-700">Job Title</label>
                <input type="text" name="title" value="<%= job.title %>" required class="mt-1 block w-full rounded-md border-gray-300">
            </div>
            <div>
                <label class="block text-gray-700">Location</label>
                <input type="text" name="location" value="<%= job.location %>" required class="mt-1 block w-full rounded-md border-gray-300">
            </div>
            <div>
                <label class="block text-gray-700">Job Type</label>
                <select name="type" required class="mt-1 block w-full rounded-md border-gray-300">
                    <option value="Full-time" <%= job.type === 'Full-time' ? 'selected' : '' %>>Full-time</option>
                    <option value="Part-time" <%= job.type === 'Part-time' ? 'selected' : '' %>>Part-time</option>
                    <option value="Contract" <%= job.type === 'Contract' ? 'selected' : '' %>>Contract</option>
                    <option value="Internship" <%= job.type === 'Internship' ? 'selected' : '' %>>Internship</option>
                </select>
            </div>
            <div>
                <label class="block text-gray-700">Description</label>
                <textarea name="description" required rows="5" class="mt-1 block w-full rounded-md border-gray-300"><%= job.description %></textarea>
            </div>
            <div>
                <label class="block text-gray-700">Requirements (one per line)</label>
                <textarea name="requirements" rows="4" class="mt-1 block w-full rounded-md border-gray-300"><%= job.requirements.join('\n') %></textarea>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">Update Job</button>
        </form>
    </div>
</body>
</html>