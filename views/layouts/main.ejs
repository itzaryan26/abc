<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobify - Find Your Dream Job</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <a href="/" class="text-2xl font-bold text-blue-600">Jobify</a>
                
                <div class="hidden md:flex space-x-4">
                    <a href="/jobs" class="text-gray-600 hover:text-blue-600 px-3 py-2">Jobs</a>
                    
                    <% if (locals.user) { %>
                        <% if (user.role === 'employer') { %>
                            <a href="/jobs/new" class="text-gray-600 hover:text-blue-600 px-3 py-2">Post Job</a>
                        <% } %>
                        <a href="/applications" class="text-gray-600 hover:text-blue-600 px-3 py-2">Applications</a>
                        <a href="/logout" class="text-gray-600 hover:text-blue-600 px-3 py-2">Logout</a>
                    <% } else { %>
                        <a href="/login" class="text-gray-600 hover:text-blue-600 px-3 py-2">Login</a>
                        <a href="/register" class="bg-blue-600 text-white hover:bg-blue-700 px-4 py-2 rounded-md">Register</a>
                    <% } %>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button id="mobile-menu-button" class="text-gray-600 hover:text-blue-600">
                        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile menu -->
            <div id="mobile-menu" class="hidden md:hidden">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="/jobs" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Jobs</a>
                    
                    <% if (locals.user) { %>
                        <% if (user.role === 'employer') { %>
                            <a href="/jobs/new" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Post Job</a>
                        <% } %>
                        <a href="/applications" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Applications</a>
                        <a href="/logout" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Logout</a>
                    <% } else { %>
                        <a href="/login" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Login</a>
                        <a href="/register" class="block text-gray-600 hover:text-blue-600 px-3 py-2">Register</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <% if (messages.error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                <%= messages.error %>
            </div>
        <% } %>
        
        <% if (messages.success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                <%= messages.success %>
            </div>
        <% } %>
        
        <%- body %>
    </div>
    
    <%- include('../partials/footer') %>

    <!-- Mobile menu toggle script -->
    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</body>
</html>